<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<servlet>
		<servlet-name>homeServlet</servlet-name>
		<servlet-class>controller.home.Home</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>userRegisterServlet</servlet-name>
		<servlet-class>controller.user.Register</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>userLoginServlet</servlet-name>
		<servlet-class>controller.user.Login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>userDisconnectServlet</servlet-name>
		<servlet-class>controller.user.Disconnect</servlet-class>
	</servlet>	
	
	<servlet>
		<servlet-name>userUpdateServlet</servlet-name>
		<servlet-class>controller.user.Update</servlet-class>
	</servlet>	
	
	<servlet>
		<servlet-class>controller.importCSV.ImportCSV</servlet-class>
		<servlet-name>importServlet</servlet-name>
	</servlet>	
	


	<servlet-mapping>
		<servlet-name>homeServlet</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>userRegisterServlet</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>userLoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>userDisconnectServlet</servlet-name>
		<url-pattern>/user-disconnect</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>userUpdateServlet</servlet-name>
		<url-pattern>/user-update</url-pattern>
	</servlet-mapping>
	
		<servlet-mapping>
		<servlet-name>importServlet</servlet-name>
		<url-pattern>/importcsv</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>ConnectedFilter</filter-name>
		<filter-class>util.ConnectedFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>ConnectedFilter</filter-name>
		<url-pattern>/user-disconnect</url-pattern>
		<url-pattern>/user-update</url-pattern>
	</filter-mapping> 

	<welcome-file-list>
		<welcome-file>index</welcome-file>
	</welcome-file-list>
</web-app>